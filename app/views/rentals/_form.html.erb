<div class="well bs-component">
  <%= form_for rental, :html => {:class => 'form-horizontal'} do |f| %>
    <% if rental.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(rental.errors.count, "error") %> prohibited this rental from being saved:</h2>

        <ul>
        <% rental.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset>
      <div class="form-group">
        <%= f.label :start_time, "Date", {:class => "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.date_select :start_time, {default: (@date.nil? ? Date.today : Date.parse(@date))}, {:class => "form-control"} %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :game_id, {:class => "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.select :game_id, Game.all.pluck(:title, :id), {:selected => (@game_id.nil? ? 1 : Game.find(@game_id).id)}, {:class => "form-control"} %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit :class => "btn btn-primary" %>
          <%= link_to 'Back', :back, :class => "btn btn-default" %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>