<p id="notice"><%= notice %></p>

<h1>Rentals</h1>

<table  class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Game</th>
      <th><%= link_to 'New Rental', new_rental_path %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
        <tr>
          <td><%= rental.name %></td>
          <td><%= rental.start_time %></td>
          <td><%= rental.end_time %></td>
          <td><%= rental.game.title %></td>
          <td><%= link_to 'Show', rental %></td>
          <% if rental.user == current_user %>
            <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
            <td><%= link_to 'Delete', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
  <% end %>
  </tbody>
</table>

<br>
