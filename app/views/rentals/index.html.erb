<p id="notice"><%= notice %></p>

<h1>Rentals</h1>

<table  class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Game</th>
      <th>Name</th>
      <th>Email</th>
      <th>Status</th>
      <th><%= link_to 'Rent a game', new_rental_path, :class => "btn btn-default" %></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
        <tr>
          <td><%= link_to rental.start_time, rental %></td>
          <td><%= link_to rental.game.title, rental %></td>
          <td><%= rental.user.name %></td> 
          <td><%= rental.user.email %></td>
          <td><%= rental.is_optional? ? (rental.is_vetoed.nil? ? 'Optional' : "Vetoed by #{User.find(rental.is_vetoed).email}") : 'Guaranteed' %></td>
          <% if rental.user == current_user %>
            <td><%= link_to 'Edit', edit_rental_path(rental), :class => "btn btn-default btn-sm" %>
            <%= link_to 'Delete', rental, :class => "btn btn-primary btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
  <% end %>
  </tbody>
</table>

<br>
