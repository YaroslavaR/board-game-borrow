<h1>Listing games</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Title</th>
    <th>Players</th>
    <th>Playing time</th>
    <th>Complexity</th>
    <% if user_signed_in? && current_user.is_admin == 1 %>
      <th><%= link_to 'New game', new_game_path %></th>
    <% end %>
  </tr>
 
  <% @games.each do |game| %>
    <tr>
      <td><%= link_to game.title, game.link %></td>
      <td>
        <% if game.min_players != game.max_players %>
          <%= game.min_players %>-<%= game.max_players %> players
        <% else %>
          <%= game.max_players %> players
        <% end %>
      </td>
      <td><%= game.playing_time %> min</td>
      <td><%= game.complexity %></td>
      <td><%= link_to 'Rent', game_path(game) %></td>
    </tr>
  <% end %>
</table>
