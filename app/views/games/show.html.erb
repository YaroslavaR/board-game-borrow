<div class="row">
  <div class="col-sm-5"></div>
  <div class="col-sm-4"><h3><%= link_to @game.title, @game.link %></h3></div>
  <div class="col-sm-3"></div>
</div>
<div class="row">
  <div class="col-sm-5"></div>
  <div class="col-sm-4"><h3>Rating: <%= @game.rating %></h3></div>
</div>
<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-2">
      <% if @game.min_players != @game.max_players %>
        <h3> <%= @game.min_players %>-<%= @game.max_players %> players </h3>
      <% else %>
        <h3> <%= @game.max_players %> players </h3>
      <% end %>
  </div>
  <div class="col-sm-2"><h3> <%= @game.playing_time %> min </h3></div>
</div>
<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-2"><h3> Location: <%= @game.location %> </h3></div>
  <div class="col-sm-2"><h3> Complexity: <%= @game.complexity %> </h3></div>
</div>

<h4>
  <div class="simple-calendar">
    <%= month_calendar events: @rentals do |date, rentals| %>
      <%= link_to date, new_rental_path(date: date, game_id: @game.id) %>
      <% game_rentals = {}
         rentals.each do |rental|
           game_rentals[rental.game_id] = rental
         end %>
      <div>
        <%= if !game_rentals[@game.id].nil?
        	    link_to game_rentals[@game.id].user.email, game_rentals[@game.id]
        	  end %>
      </div>
    <% end %>
  </div>
</h4>
<h4>
<% if user_signed_in? && current_user.is_admin == 1 %>
  <td><%= link_to 'Edit', edit_game_path(@game) %></td>
  <td><%= link_to 'Delete', game_path(@game),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
<% end %>
<td><%= link_to 'Back to games list', games_path %></td>
</h4>

<p id="notice"><%= notice %></p>

<h1>Rentals</h1>

<table  class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
	    <% if @game.id == rental.game_id %>
	      <tr>
	        <td><%= rental.name %></td>
	        <td><%= rental.start_time %></td>
	        <td><%= rental.end_time %></td>
	        <td><%= link_to 'Show', rental %></td>
          <% if rental.user == current_user %>
  	        <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
  	        <td><%= link_to 'Delete', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
	      </tr>
	    <% end %>
	<% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rental', new_rental_path %>


</div>
